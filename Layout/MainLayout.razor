@inherits LayoutComponentBase
@inject NavigationManager Nav

@if (!IsOnIndexPage)
{
    <header class="main-header">
        <nav class="main-nav">
            <a href="/home">
                <img src="MooSharpWhiteCircle.png" alt="MooSharp Logo" class="nav-logo" />
            </a>
            <a href="/home" class="matrix-hover">Home</a>
            <a href="/about" class="matrix-hover">About</a>
            <a href="/projects" class="matrix-hover">Projects</a>
            <a href="/contact" class="matrix-hover">Contact</a>
        </nav>
    </header>
}

<main class="main-layout">
    @Body
</main>

@code {
    private bool IsOnIndexPage => Nav.Uri.EndsWith("/") || Nav.Uri.EndsWith("/index");
}
