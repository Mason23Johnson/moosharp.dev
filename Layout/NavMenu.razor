@inject NavigationManager Nav

@code {
    private bool IsTerminal => Nav.Uri.ToLower().Contains("/terminal");

    private void ToggleToTerminal()
    {
        if (IsTerminal)
            Nav.NavigateTo("/");
        else
            Nav.NavigateTo("/terminal");
    }
}
